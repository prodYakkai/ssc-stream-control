generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?

  streams      Stream[]
  categories   Category[]
  destinations ReservedDestination[]
  archived     Boolean               @default(false)

  branding   EventBranding?
  brandingId String?        @db.ObjectId

  promos EventAd[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userIds String[] @db.ObjectId
  users   User[]   @relation(fields: [userIds], references: [id])
}

model EventBranding {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  eventId    String  @unique @db.ObjectId
  logoUrl    String?
  faviconUrl String?

  customFooter String?

  primaryColor   String?
  secondaryColor String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  disablePromo Boolean @default(false)

  // Relations
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model EventAd {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  eventId String @db.ObjectId

  imageURL String?

  position AdPosition @default(UNKNOWN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  disabled  Boolean  @default(false)

  // Relations
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Stream {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  eventId    String @db.ObjectId
  categoryId String @db.ObjectId

  srsIngestStreamId String?
  srsIngestClientId String?
  ingestKey         String  @unique @default(uuid())
  viewKey           String  @unique @default(uuid())

  ingestProtected Boolean @default(false)
  viewProtected   Boolean @default(false)

  viewLocked Boolean @default(false)

  description String?
  name        String  @unique

  ingestMethod IngestMethod @default(UNKNOWN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  viewers  Viewer[]
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  event    Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  streamHistory StreamHistory[]
}

model ReservedDestination {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  streamId String? @db.ObjectId

  eventId String @db.ObjectId
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  viewKey String @unique @default(uuid())

  name        String  @unique
  description String?
  redirect    Boolean @default(false)

  createdAt DateTime @default(now())
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  eventId   String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  event   Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  streams Stream[]
}

model Viewer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  streamId    String   @db.ObjectId
  srsClientId String   @unique
  createdAt   DateTime @default(now())

  stream Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  email        String  @unique
  thirdPartyId String?
  name         String

  admin    Boolean @default(false)
  disabled Boolean @default(false)
  groups   Boolean @default(false)

  eventIds String[] @db.ObjectId
  events   Event[]  @relation(fields: [eventIds], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StreamHistory {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  srsClientId  String       @unique
  ingestMethod IngestMethod

  createdAt DateTime  @default(now())
  stoppedAt DateTime?

  streamId String @db.ObjectId
  stream   Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
}

model AuditTrail {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  action    AuditTrailAction
  userId    String
  createdAt DateTime         @default(now())
}

// Session package
model Session {
  objId        String   @id @default(auto()) @map("_id") @db.ObjectId
  id          String   @unique
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

enum IngestMethod {
  RTMP
  WHIP
  SRT
  UNKNOWN
}

enum AuditTrailAction {
  Login
  GenerateKey
  RotateClientKey
  GenerateMasterSheet
  RevokeKey
  KickStream
  KickClient
}

enum AdPosition {
  UNKNOWN
  TOP
  BOTTOM
  LEFT
  RIGHT
}
